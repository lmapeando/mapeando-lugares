---
import Login from "./Login.jsx";
import { Image } from 'astro:assets';
import logo from '../assets/Logo.png'; 
import logoDAB from '../assets/DAB.png'; 
---

<footer>
    <div class="footer-main">
        <div class="container">
            <div class="row">
                <div class="footer-col logo-col">
                    <div class="logo-part">
                        <a href="/" class="footer-logo text-uppercase">
                            <Image src={logo} alt="logo"/>
                        </a>
                    </div>
                </div>
                <div class="footer-col service-col">
                    <h3 class="footer-title">MAPEANDO LUGARES</h3>
                    <p>PARTICIPA Y CUÉNTANOS EL ESTADO DE TU CIUDAD</p>
                    <button
                        type="button"
                        class="Mod"
                        data-bs-toggle="modal"
                        data-bs-target="#exampleModal"
                    >
                        <p>SEMILLERO DE INVESTIGACIÓN VTS & SAVARC</p>
                    </button>
                </div>
                <div class="footer-col dab-col">
                    <Image src={logoDAB} alt="logo DAB" />
                </div>
                <div class="footer-col contact-col">
                    <div class="footer-widget">
                        <h5>INFORMACIÓN DE CONTACTO</h5>
                        <ul class="social-icon">
                            <li class="contact-phone">
                                <div>
                                    <i class="bi bi-whatsapp"></i>
                                </div>
                                <div class="text-holder">
                                    <h6 class="text-uppercase">TELÉFONO</h6>
                                    <p>302-402-8896</p>
                                </div>
                            </li>
                            <li class="contact-address">
                                <div>
                                    <i class="bi bi-compass-fill"></i>
                                </div>
                                <div class="text-holder">
                                    <h6 class="text-uppercase">DIRECCIÓN</h6>
                                    <p>Carrera 2 No. 10-70</p>
                                </div>
                            </li>
                            <li class="contact-email">
                                <div>
                                    <i class="bi bi-envelope-fill"></i>
                                </div>
                                <div class="text-holder">
                                    <h6 class="text-uppercase">CORREO</h6>
                                    <p>yamirlamaya59@unisalle.edu.co</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog modal-lg">
        <div class="modal-content modall">
            <div class="modal-body">
                <div class="row align-items-center">
                    <div class="col-6 d-flex flex-column align-items-center">
                        <Image src={logo} alt="logo"  /> 
                        <p class="text-center">
                            SEMILLERO DE INVESTIGACIÓN VTS
                        </p>
                        <p class="text-center">
                            SEMILLERO DE INVESTIGACION SAVARC
                        </p>
                    </div>
                    <Login client:only />
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    form input {
        background-color: #414141;
        color: white;
        border-radius: 20px;
        border: 0;
    }

    .footer-main {
        width: 100%;
        color: white;
        background-color: black;
        display: flex;
        align-items: center;
        font-size: 0.8rem;
        justify-content: center;
        padding: 20px 0;
        flex-direction: column;
        text-align: center;
    }

    .container {
        width: 90%;
        max-width: 1200px; /* Mantenemos el max-width para el contenido */
        margin: 0 auto; /* Centramos el contenedor */
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: flex-start;
        width: 100%;
    }

    .footer-col {
        padding: 15px;
        margin-bottom: 20px;
        width: 100%;
        box-sizing: border-box;
    }

    .footer-main img {
        max-width: 80%;
        height: auto;
    }

    .footer-title {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .social-icon {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        padding: 0;
        list-style: none;
    }

    .social-icon li {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
    }

    .social-icon i {
        font-size: 1rem;
    }

    .Mod {
        background-color: transparent;
        border: 0;
        color: white;
        padding: 0;
        text-align: center;
    }

    .text-holder {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 0.8rem;
    }

    .modall {
        background-color: #121b26;
        color: white;
        border-radius: 50px;
    }

    .logo-col,
    .service-col,
    .dab-col,
    .contact-col {
        /* Estilos iniciales para todas las columnas */
    }

    /* Estilos específicos para pantallas de celular (hasta 767px) */
    @media (max-width: 767px) {
        .footer-main .logo-col .logo-part img {
            /* Selector más específico */
            max-width: 40%; /* Reducimos aún más el logo en celular */
            height: auto;
        }
    }
    /* Media Query para pantallas de PC (768px y más) */
    @media (min-width: 768px) {
    .footer-main {
        width: 100%; /* El footer ocupa todo el ancho */
        color: white;
        background-color: black;
        padding: 10px 20px;
        display: flex;
        justify-content: center; /* Centra el contenedor */
        align-items: flex-start;
    }

    .container {
        max-width: 1500px; /* Ancho máximo del contenido */
        width: 100%; /* El contenedor ocupa todo el ancho del footer */
        margin: 0 auto; /* Centra el contenedor horizontalmente */
        display: flex;
        justify-content: space-between; /* Distribuye las columnas */
        align-items: flex-start;
        flex-wrap: nowrap;
    }

    .row {
        display: flex;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: stretch;
        width: 100%; /* La fila ocupa todo el ancho del contenedor */
        margin: 0;
    }

    .footer-col {
        width: auto; /* El ancho de cada columna se basa en su contenido */
        margin-bottom: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
    }
        .logo-col {
            flex-basis: auto;
        }

        .footer-main .logo-part {
            width: auto;
        }

        .footer-main .logo-part img {
            max-width: 100px;
            height: auto;
        }

        .service-col {
            flex-basis: auto;
        }

        .dab-col {
            flex-basis: auto;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .dab-col img {
            max-width: 80%;
            max-height: 80%;
        }

        .contact-col .footer-widget {
            margin-top: 0;
            margin-bottom: 0;
        }

        .contact-col .social-icon {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            align-items: flex-start;
            gap: 15px;
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .contact-col .social-icon li {
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 10px;
            padding-bottom: 0;
            width: auto;
        }

        .contact-col .text-holder {
            align-items: flex-start;
            margin-left: 5px;
            font-size: 0.9rem;
        }

        .contact-col .text-holder h6 {
            margin-top: 0;
            margin-bottom: 1px;
            font-size: 0.8rem;
        }

        .contact-col .text-holder p {
            margin-top: 0;
            margin-bottom: 0;
            font-size: 0.8rem;
        }

        .contact-col .social-icon i {
            font-size: 0.9rem;
            margin-right: 3px;
        }
    }
</style>